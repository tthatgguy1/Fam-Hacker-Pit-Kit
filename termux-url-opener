   ------------------------[Nah-Fam_Studios]---------------------------- ' | lolcat --seed 88
printf "\n"
printf "     ┌───────────────────────────────────────────────────────────────┐\n"
printf "     ├─────────────────────👽─[Nah─Fam─Studios]─👽───────────────────┤\n"
printf "     ├───────────────────────────────────────────────────────────────┘\n"
printf "     │  ────>  📜   Ply: [%s]\n" "$PTITLE"
printf "     │  ────>  📺   Chl: [%s]\n" "$CHANNEL"
printf "     │  ────>  🙋   Sbs: [%s]\n" "$SUBS"
printf "     │  ────>  👍   Lks: [%s]\n" "$LIKES"
printf "     │  ────>  📆   Upd: [%s]\n" "$UPLOAD_DATE_FMT"
printf "     └───────────────────────────────────────────────────────────────┘\n"
printf "                     ┌─────────────────────────────┐\n"
printf "      <──────────────┤ [Running]:> Playlist Audio  ├───────────────>\n"
printf "                     └─────────────────────────────┘\n"
sleep 1.0
"${OPT_PLMP3_CMD[@]}" >/dev/null 2>&1
rc=$?
  if [ "$rc" -eq 0 ]; then
    mpv "$HOME/storage/shared/Fam-Hacker-Pit-Kit/.NFS-Data/sfx/c.mp3" >/dev/null 2>&1
    mpv "$HOME/storage/shared/Fam-Hacker-Pit-Kit/.NFS-Data/sfx/FHS.mp3" >/dev/null 2>&1
