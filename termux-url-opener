    sleep 1.0
    "mpv" "${NFS_HOME}${TXS}" >/dev/null 2>&1
    clear
  else
    "mpv" "${NFS_HOME}${MFGTA}" >/dev/null 2>&1
    printf "Your Audio Playlist Extract Has Failed Please Try Again\n"
    printf "\n"
    printf "┌──Press─Any─Button─To─Move─On──┐\n"
    printf "└──>"
    read -r -n1 -t10
    clear
  fi
newdi=$(ls -td -- */ 2>/dev/null | head -n1)
  if [ -n "$newdi" ]; then
