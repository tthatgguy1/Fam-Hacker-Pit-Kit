4)
  echo " "
    cowsay -r "$TITLE"
  echo " "
  echo " "
	printf "${VBLU}┌───────────────────────────────────────────────┐\n${RESET}"
    	printf "${VBLU}├────────────👽─${PNK}[${BCYN}Nah${VBLU}─${BCYN}Fam${VBLU}─${BCYN}Studios${PNK}]${VBLU}─👽────────────${VBLU}┤\n${RESET}"
    	printf "${VBLU}├───────────────────────────────────────────────┤\n${RESET}"
