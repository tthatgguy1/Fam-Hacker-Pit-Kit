#printf '%b'   "${VBLU}└──${BCYN}>${BMGT}:${ACID} "
#IFS= read -r URL
#URL="${URL#"${URL%%[![:space:]]*}"}"; URL="${URL%"${URL##*[![:space:]]}"}"  # trim
