#!/data/data/com.termux/files/usr/bin/bash
URL="${1:-}"
set -euo pipefail

# <── Paths ──> #
VIDEO_OUT="$HOME/storage/shared/Fam-Hacker-Pit-Kit/YouTube-Video-Pit"
