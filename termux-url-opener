printf "  ${VBLU}└───────────────────────────────────────────────────────────┘${RESET}\n\n"

printf "  ${VBLU}┌──${BCYN}Press${VBLU}─${BCYN}Any${VBLU}─${BCYN}Button${VBLU}─${BCYN}To${VBLU}─${BCYN}Choose${VBLU}──┐${RESET}\n"
printf "  ${VBLU}└──${BMGT}>${ACID}:${RESET} "
read -r DECISION
echo

DECISION=${DECISION:-$DEFAULT}
rc=2
case "${DECISION}" in

  1)
    clear
    OUT_TPL='%(playlist_title,replace="/","﹨")s/%(title)s - %(uploader)s.%(ext)s'
