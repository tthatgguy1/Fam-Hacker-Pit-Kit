printf "  ${VBLU}┌───────────────────────────────────────────────────────────┐\n"
printf "  ${VBLU}│ ${BMGT}[${BCYN}1${BMGT}] %s        ${VBLU}│\n" "$OPTION_BMKV"
printf "  ${VBLU}├───────────────────────────────────────────────────────────┤\n"
printf "  ${VBLU}│ ${BMGT}[${BCYN}2${BMGT}] %s        ${VBLU}│\n" "$OPTION_2K_CAP"
