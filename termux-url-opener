LOG_DIR="$HOME/storage/shared/Fam-Hacker-Pit-Kit/.cache/YouTube_Single-Downloads"
mkdir -p "$VIDEO_OUT" "$LOG_DIR"
mkdir -p "$AUDIO_OUT" "$LOG_DIR"

# <── Safe CD ──> #
cd "$WORKDIR" || { echo "Cannot cd to $WORKDIR"; exit 1; }

# <── Colors ──> #
ESC=$'\e'
NGRN="${ESC}[38;2;51;255;0m"; BMGT="${ESC}[38;2;255;16;240m"
NONG="${ESC}[38;2;255;95;0m"; BCYN="${ESC}[38;2;0;255;255m"
ACID="${ESC}[38;2;204;255;0m"; VBLU="${ESC}[38;2;138;43;226m"
BWHT="${ESC}[38;2;255;255;255m"; RESET="${ESC}[0m"

clear
# <── Nah-Fam_Studies ──> #
