OPT_PLAYLIST_MP3_CMD=(
  yt-dlp
  -f "bestaudio"
  -o "$YT_WRK/%(playlist_title)s/%(title)s - %(uploader)s.mp3"
  -x --audio-format mp3
	--quiet
	--progress
	--embed-thumbnail
	--no-warnings
	--no-check-formats
	--ignore-errors
	"$URL")

OPT_BEST_VIDEO_MKV_CMD=(
  yt-dlp
  -f "bestvideo+bestaudio"
  -o "$YT_WRK/%(uploader)s - %(title)s [%(height)s]{Best-Resolution+Audio}.mkv"
