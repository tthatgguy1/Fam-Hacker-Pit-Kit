      "${MUSIC_SLAVE}" "${NFS_HOME}/${MFGTA}" >/dev/null 2>&1
    cowsay -r "Your MKV File Has Failed To Transfer"
      echo " "
      printf "${BWHT}┌──${NONG}Please${BWHT}─${NONG}Press${BWHT}─${NONG}Any${BWHT}─${NONG}Button${BWHT}──┐${RESET}\n${BWHT}└─${NONG}>${GRN}:${RESET} "
      read -n1 -r -t5
    clear
  fi
