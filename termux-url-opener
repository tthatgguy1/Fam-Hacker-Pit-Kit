#!/data/data/com.termux/files/usr/bin/bash
# Project name : Fam-Hacker-Pit-Kit
# Coded by: tthatgguy1 (You dont become a coder by just changing the credits
# Github: https://github.com/tthatgguy1/Fam-Hacker-Pit-Kit
# Date : 12/04/2024
# Updated 09/09/2025
URL="$1"

                 # <â”€â”€â”€â”€â”€ Directory Escapes â”€â”€â”€â”€â”€> #
NFS_HOME="$HOME/storage/shared/Fam-Hacker-Pit-Kit" # ${NFS_HOME}
YT_VIDEO_PIT="$HOME/storage/shared/Fam-Hacker-Pit-Kit/YouTube-Video-Pit" # ${YT_VIDEO_PIT}
YT_AUDIO_PIT="$HOME/storage/shared/Fam-Hacker-Pit-Kit/YouTube-Audio-Pit" # ${YT_AUDIO_PIT}
YouTube_Work="$HOME/downloads" # ${YouTube_Work}

                 # <â”€â”€â”€â”€â”€ Sound Effect Escsapes â”€â”€â”€â”€â”€> #
TXS="/.NFS-Data/sfx/TXS.mp3"        # ${TXS}
MSTART="/.NFS-Data/sfx/MDLD.mp3"    # ${MSTART}
CMP="/.NFS-Data/sfx/c.mp3"          # ${CMP}
MDATA="/.NFS-Data/sfx/MDATA.mp3"    # ${MDATA}
FHS="/.NFS-Data/sfx/FHS.mp3"        # ${FHS}
YTSU="/.NFS-Data/sfx/YTSU.mp3"      # ${YTSU}
TB="/.NFS-Data/sfx/TB.mp3"          # ${TB}
MFGTA="/.NFS-Data/sfx/MFGTA.mp3"    # ${MFGTA}
SKL="/.NFS-Data/sfx/SKL.mp3"        # ${SKL}
MUSIC_SLAVE="mpv"                   # ${MUSIC_SLAVE}

                   # <â”€â”€â”€â”€â”€ Color Setup â”€â”€â”€â”€â”€> #
ESC=$'\e'
GRN="${ESC}[38;2;51;255;0m"       # ${GRN}   $GRN  - Lime Green
PNK="${ESC}[38;2;255;16;240m"     # ${PNK}   $PNK  - Bright Magenta
BLU="${ESC}[38;2;0;102;255m"      # ${BLU}   $BLU  - Medium Blue
BONG="${ESC}[38;2;255;140;0m"     # ${BONG}  $BONG - Pumpkin Orange
NONG="${ESC}[38;2;255;95;0m"      # ${NONG}  $NONG - Neon Orange

BCYN="${ESC}[38;2;0;255;255m"     # ${BCYN}  $BCYN - Cyan
ACID="${ESC}[38;2;204;255;0m"     # ${ACID}  $ACID - Acid Green
VBLU="${ESC}[38;2;138;43;226m"    # ${VBLU}  $VBLU - Violet Blue
NPPL="${ESC}[38;2;188;19;254m"    # ${NPPL}  $NPPL - Neon Purple
BWHT="${ESC}[38;2;255;255;255m"   # ${BWHT}  #BWHT - Bright White
RESET="${ESC}[0m"                 # ${RESET} $RESET

		    # <â”€â”€â”€â”€â”€ Redirect Termux â”€â”€â”€â”€â”€> #
cd $YouTube_Work
		     # <â”€â”€â”€â”€â”€ Intro Banner â”€â”€â”€â”€â”€> #
echo " "
toilet -k -o -f smslant -F metal "Fam-Hacker"
echo " "
  cowsay -r "Welcome To Fam-Hacker Tube Client, Written By Nah-Fam_Studios (Seth J. Nelson). This Script Will Download Any Shared YouTube URL to Termux." | lolcat
    "${MUSIC_SLAVE}" "${NFS_HOME}/${SKL}" >/dev/null 2>&1
echo " "
    "${MUSIC_SLAVE}" "${NFS_HOME}/${YTSU}" >/dev/null 2>&1 # 57
echo " "
sleep 2.0
    "${MUSIC_SLAVE}" "${NFS_HOME}/${MDATA}" >/dev/null 2>&1

		    # <â”€â”€â”€â”€â”€ Channel Strings â”€â”€â”€â”€â”€> #
IFS=$'\t' read -r TITLE CHANNEL SUBS LIKES UPLOAD_DATE < <(yt-dlp -q --no-warnings --print "%(title)s\t%(uploader)s\t%(channel_follower_count)s\t%(like_count)s\t%(upload_date)s" "$URL")
	       # <â”€â”€â”€â”€â”€ Upload Date Format To US Engish â”€â”€â”€â”€â”€> #
if [[ "$UPLOAD_DATE" =~ ^[0-9]{8}$ ]]; then
  UPLOAD_DATE_FMT="${BCYN}${UPLOAD_DATE:4:2}${RESET}${PNK}-${RESET}${BCYN}${UPLOAD_DATE:6:2}${RESET}${PNK}-${RESET}${BCYN}${UPLOAD_DATE:0:4}${RESET}"
else
  UPLOAD_DATE_FMT="${UPLOAD_DATE}"
fi

                    # <â”€â”€â”€â”€â”€ Download Options â”€â”€â”€â”€â”€> #
OPTION_VIDEO="${VBLU}Download${RESET} \
${VBLU}Video${RESET} \
${VBLU}In the${RESET} \
${BCYN}Best${RESET} \
${VBLU}Quality For Video${RESET} \
${ACID}+${RESET} \
${VBLU}Audio${RESET}"

OPTION_AUDIO="${VBLU}Extract${RESET} \
${ACID}&${RESET} \
${VBLU}Download${RESET} \
${BCYN}Audio${RESET} \
${VBLU}Only${RESET} \
${VBLU}MP3${RESET}"

OPTION_QUIT="${ACID}Quit${RESET}"

                 # <â”€â”€â”€â”€â”€ Download Options Comand â”€â”€â”€â”€â”€> #
OPT_VIDEO_CMD=(
  yt-dlp
   -f "bestvideo+bestaudio"
   -o "${YouTube_Work}/%(uploader)s - %(title)s.mkv"
	--progress --quiet
	--console-title --no-warnings
	--merge-output-format mkv
	--embed-thumbnail --embed-chapters
	--embed-subs --no-check-formats
	--progress-template "download: ${PNK}DL${BCYN}:%(progress._percent_str)s ${PNK}ETA${BCYN}: %(progress._eta_str)s ${PNK}Speed${BCYN}:%(progress._speed_str)s"
	  "$URL")

OPT_AUDIO_CMD=(
  yt-dlp
   -x --audio-format mp3
   -f "bestaudio"
   -o "${YouTube_Work}/%(uploader)s - %(title)s.mp3"
	--progress --quiet
	--console-title --no-warnings
	--no-check-formats
	--progress-template "download: ${PNK}DL${BCYN}:%(progress._percent_str)s ${PNK}ETA${BCYN}: %(progress._eta_str)s ${PNK}Speed${BCYN}:%(progress._speed_str)s"
	  "$URL")

	         # <â”€â”€â”€â”€â”€ Default Option With Timeout â”€â”€â”€â”€â”€> #
DEFAULT="3"

		       # <â”€â”€â”€â”€â”€ Decision Time â”€â”€â”€â”€â”€> #
  clear
    echo " "
    toilet -k -o -f smslant -F gay "Download Options For"
    cowsay -f stan "$TITLE" | lolcat
      echo " "
      echo " "
      echo " "
      printf " ${VBLU}â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤\n${RESET}"
      printf " ${ACID}[${VBLU}1${ACID}] %s\n" "$OPTION_VIDEO"
      printf " ${ACID}[${VBLU}2${ACID}] %s\n" "$OPTION_AUDIO"
      printf " ${ACID}[${VBLU}3${ACID}] %s\n" "$OPTION_QUIT"
      printf " ${ACID}[${VBLU}E${ACID}] ${VBLU}Press ${BWHT}[${NONG}Enter${BWHT}] ${VBLU}For Default Option ${BWHT}[${NONG}%d${BWHT}]${RESET}\n" "$DEFAULT"
      echo " "
      echo " "
      printf "${BCYN}â”Œâ”€â”€${PNK}Please${BCYN}â”€${PNK}Press${BCYN}â”€${PNK}Any${BCYN}â”€${PNK}Button${BCYN}â”€â”€â”${RESET}\n${BCYN}â””â”€${PNK}>${PNK}: "
      read -n1 -r -t20 DECISION
    clear
    echo " "
  DECISION=${DECISION:-$DEFAULT}
  rc=2
  case "${DECISION}" in
	      # <â”€â”€â”€â”€â”€ Choice Number 1) Best Video and Audio â”€â”€â”€â”€â”€> #
    1)
      date +"%l:%M:%S %p" | lolcat -a
      "${MUSIC_SLAVE}" "${NFS_HOME}/${MSTART}" >/dev/null 2>&1
        echo " "
       cowsay -r "${TITLE}" | lolcat
        echo " "
        printf    "${VBLU}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”\n${RESET}"
        printf    "${VBLU}â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ğŸ‘½â”€${PNK}[${BCYN}Nah${VBLU}â”€${BCYN}Fam${VBLU}â”€${BCYN}Studios${PNK}]${VBLU}â”€ğŸ‘½â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${VBLU}â”¤\n${RESET}"
        printf    "${VBLU}â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤\n${RESET}"
        printf    "${VBLU}â”‚  ${BCYN}â”€â”€${PNK}> ğŸ“º    ${PNK}Chl${BCYN}:  	${PNK}[${BCYN}${CHANNEL}${PNK}]${RESET}\n"
        printf    "${VBLU}â”‚  ${BCYN}â”€-${PNK}> ğŸ™‹    ${PNK}Sbs${BCYN}:  	${PNK}[${BCYN}${SUBS}${PNK}]${RESET}\n"
        printf    "${VBLU}â”‚  ${BCYN}â”€â”€${PNK}> ğŸ‘    ${PNK}Lks${BCYN}:  	${PNK}[${BCYN}${LIKES}${PNK}]${RESET}\n"
        printf    "${VBLU}â”‚  ${BCYN}â”€â”€${PNK}> ğŸ“†    ${PNK}Upd${BCYN}:  	${PNK}[${BCYN}${UPLOAD_DATE_FMT}${RESET}${PNK}]${RESET}\n"
        printf    "${VBLU}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${RESET}"
        echo " "
        echo " "
        printf "       ${BCYN}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”\n"
        printf " ${BCYN}â”€â”€â”€â”€â”€â”€â”¤  ${PNK}Running${ACID}: ${VBLU}Best Video${PNK}+${VBLU}Audio${BCYN}    â”œâ”€â”€â”€â”€â”€â”€â”€${RESET}\n"
        printf "       ${BCYN}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜\n"
	sleep 2.0
                    # <â”€â”€â”€â”€â”€ Actual YT-DLP Command â”€â”€â”€â”€â”€> #
	"${OPT_VIDEO_CMD[@]}";
       rc=$?
                  # <â”€â”€â”€â”€â”€ Fail Safe Download Status â”€â”€â”€â”€â”€> #
    if [ $rc -eq 0 ]; then
      "${MUSIC_SLAVE}" "${NFS_HOME}/${CMP}" >/dev/null 2>&1
       "${MUSIC_SLAVE}" "${NFS_HOME}/${FHS}" >/dev/null 2>&1
      cowsay -r "Your MKV File Has Downloaded Successfully!" | lolcat
	sleep 4.0
       "${MUSIC_SLAVE}" "${NFS_HOME}/${TXS}" >/dev/null 2>&1
	clear
    else
      "${MUSIC_SLAVE}" "${NFS_HOME}/${MFGTA}" >/dev/null 2>&1
      cowsay -r "Your Video Download Has Failed, Please Try Again." | lolcat
      printf "${BCYN}â”Œâ”€â”€${PNK}Please${BCYN}â”€${PNK}Press${BCYN}â”€${PNK}Any${BCYN}â”€${PNK}Button${BCYN}â”€â”€â”${RESET}\n${BCYN}â””â”€${PNK}>${PNK}: "
	read -n1 -r
	clear
    fi
                # <â”€â”€â”€â”€â”€ Fail Safe File Transfer Status â”€â”€â”€â”€â”€> #
newf=$(ls -t -- *.mkv 2>/dev/null | head -n1)
if [ -n "$newf" ]; then
  mv -- "$newf" "$YT_VIDEO_PIT" >/dev/null 2>&1
    cowsay -f cube "Your MKV File Has Been Transferred To YT_VIDEO_PIT, Successfully!" | lolcat
     "${MUSIC_SLAVE}" "${NFS_HOME}/${FHS}" >/dev/null 2>&1
    sleep 1.0
    printf "${BCYN}â”Œâ”€â”€${PNK}Please${BCYN}â”€${PNK}Press${BCYN}â”€${PNK}Any${BCYN}â”€${PNK}Button${BCYN}â”€â”€â”${RESET}\n${BCYN}â””â”€${PNK}>${PNK}: "
  read -n1 -r
else
     "${MUSIC_SLAVE}" "${NFS_HOME}/${MFGTA}" >/dev/null 2>&1
    printf "Your MKV File Has Failed To Transfer.\n"
   printf "${BCYN}â”Œâ”€â”€${PNK}Please${BCYN}â”€${PNK}Press${BCYN}â”€${PNK}Any${BCYN}â”€${PNK}Button${BCYN}â”€â”€â”${RESET}\n${BCYN}â””â”€${PNK}>${PNK}: "
  read -n1 -r
fi
;;
  2)
              # <â”€â”€â”€â”€â”€ Choice Number 2) Best Audio .mp3 â”€â”€â”€â”€â”€> #
   date +"%l:%M:%S %p" | lolcat -a
   echo " "
   cowsay -r "${TITLE}" | lolcat
      echo " "
      printf    "${VBLU}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”\n${RESET}"
      printf    "${VBLU}â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ğŸ‘½â”€${PNK}[${BCYN}Nah${VBLU}â”€${BCYN}Fam${VBLU}â”€${BCYN}Studios${PNK}]${VBLU}â”€ğŸ‘½â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${VBLU}â”¤\n${RESET}"
      printf    "${VBLU}â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤\n${RESET}"
      printf    "${VBLU}â”‚  ${BCYN}â”€â”€${PNK}> ğŸ“º    ${PNK}Chl${BCYN}:  	${PNK}[${BCYN}${CHANNEL}${PNK}]${RESET}\n"
      printf    "${VBLU}â”‚  ${BCYN}â”€-${PNK}> ğŸ™‹    ${PNK}Sbs${BCYN}:  	${PNK}[${BCYN}${SUBS}${PNK}]${RESET}\n"
      printf    "${VBLU}â”‚  ${BCYN}â”€â”€${PNK}> ğŸ‘    ${PNK}Lks${BCYN}:  	${PNK}[${BCYN}${LIKES}${PNK}]${RESET}\n"
      printf    "${VBLU}â”‚  ${BCYN}â”€â”€${PNK}> ğŸ“†    ${PNK}Upd${BCYN}:  	${PNK}[${BCYN}${UPLOAD_DATE_FMT}${RESET}${PNK}]${RESET}\n"
      printf    "${VBLU}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${RESET}"
      echo " "
      echo " "
      printf "       ${BCYN}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”\n"
      printf " ${BCYN}â”€â”€â”€â”€â”€â”€â”¤  ${PNK}Running${ACID}: ${VBLU}Best Audio${BCYN}    â”œâ”€â”€â”€â”€â”€â”€â”€${RESET}\n"
      printf "       ${BCYN}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜\n"
      sleep 2.0
    "${OPT_AUDIO_CMD[@]}";
    rc=$?
                 # <â”€â”€â”€â”€â”€ Fail Safe Audio Download Status â”€â”€â”€â”€â”€> #
    if [ $rc -eq 0 ]; then
      cowsay -r "Your MP3 File Has Downloaded Successfully!" | lolcat
      sleep 5.0
    else
      printf "${BCYN}â”Œâ”€â”€${PNK}Please${BCYN}â”€${PNK}Press${BCYN}â”€${PNK}Any${BCYN}â”€${PNK}Button${BCYN}â”€â”€â”${RESET}\n ${BCYN}â””â”€${PNK}>${PNK}: "
      read -n1 -r
    fi
 clear
              # <â”€â”€â”€â”€â”€ Fail Safe Audio File Transfer Status â”€â”€â”€â”€â”€> #
newf=$(ls -t -- *.mp3 2>/dev/null | head -n1)
 if [ -n "$newf" ]; then
  mv -- "$newf" "$YT_AUDIO_PIT" >/dev/null 2>&1
  cowsay -f cube "Your MP3 File Has Been Transferred To YT_AUDIO_PIT, Successfully!" | lolcat
  "${MUSIC_SLAVE}" "${NFS_HOME}/${FHS}" >/dev/null 2>&1
  printf "${VBLU}â”Œâ”€â”€${ACID}Please${VBLU}â”€${ACID}Press${VBLU}â”€${ACID}Any${RESET}"
  read -n1 -r
 else
  "${MUSIC_SLAVE}" "${NFS_HOME}/${MFGTA}" >/dev/null 2>&1
  printf "Your MP3 File Has Failed To Transfer.\n"
  printf "${VBLU}â”Œâ”€â”€${ACID}Please${VBLU}â”€${ACID}Press${VBLU}â”€${ACID}Any${RESET}"
  read -n1 -r
 fi
;;
  3)
   rc=2
     exit
;;
  *)
    rc=2
      printf "${BCYN}â”Œâ”€â”€${PNK}Please${BCYN}â”€${PNK}Press${BCYN}â”€${PNK}Any${BCYN}â”€${PNK}Button${BCYN}â”€â”€â”${RESET}\n ${BCYN}â””â”€${PNK}>${PNK}: "
      read -n1 -r
;;
esac
