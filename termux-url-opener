#   ------------------------[Nah-Fam_Studios]----------------------------' | lolcat --seed 94

# <â”€â”€ Intro Sounds (Best-Effort) â”€â”€> #
mpv "$HOME/storage/shared/Fam-Hacker-Pit-Kit/.NFS-Data/sfx/SKL.mp3" >/dev/null 2>&1 || true
mpv "$HOME/storage/shared/Fam-Hacker-Pit-Kit/.NFS-Data/sfx/MDATA.mp3" >/dev/null 2>&1 || true
printf '\n\n'

# <â”€â”€ Channel Strings (Robust) â”€â”€> #
DELIM=$'\x1f'
FMT=$'%(playlist_title)s\x1f%(title)s\x1f%(uploader)s\x1f%(channel_follower_count)s\x1f%(like_count)s\x1f%(upload_date)s\x1f%(width)s\x1f%(height)s'

if ! IFS=$DELIM read -r PTITLE TITLE CHANNEL SUBS LIKES UPLOAD_DATE QLTYW QLTYH < <(
  yt-dlp -q --no-warnings --print "$FMT" "$URL"
); then
  echo "Failed to fetch metadata from yt-dlp for: $URL"
  exit 1
fi

if [[ "$UPLOAD_DATE" =~ ^[0-9]{8}$ ]]; then
  UPLOAD_DATE_FMT="${BCYN}${UPLOAD_DATE:4:2}${BMGT}-${BCYN}${UPLOAD_DATE:6:2}${BMGT}-${BCYN}${UPLOAD_DATE:0:4}${RESET}"
else
  UPLOAD_DATE_FMT="${UPLOAD_DATE}${RESET}"
fi

# <â”€â”€ Highest Available (With Fallback) â”€â”€> #
OPT_BMKV_CMD=(
  yt-dlp
    -f "bestvideo*+bestaudio/best"
    -o "%(uploader)s - %(title)s [%(height)sp] {Highest_Quality}.mkv"
    --progress --quiet
    --no-playlist
    --console-title
    --no-check-formats --no-warnings --ignore-errors
    --write-subs --embed-subs --sub-format srt --convert-subs srt
    --embed-thumbnail --embed-chapters
    --merge-output-format mkv
    --progress-template "download: ${VBLU}DL${BCYN}:%(progress._percent_str)s ${BMGT}ETA${BCYN}: %(progress._eta_str)s ${VBLU}Speed${BCYN}:%(progress._speed_str)s"
    "$URL"
)

# <â”€â”€ Cap At 2560p (2K-UHD) â”€â”€> #
OPT_2K_CAP_CMD=(
  yt-dlp
    -f "bestvideo[height<=2560]+bestaudio/best[height<=2560]"
    -o "%(uploader)s - %(title)s [%(height)sp].mkv"
    --progress --quiet
    --no-playlist
    --console-title
    --no-check-formats --no-warnings --ignore-errors
    --write-subs --embed-subs --sub-format srt --convert-subs srt
    --embed-thumbnail --embed-chapters
    --merge-output-format mkv
    --progress-template "download: ${VBLU}DL${BCYN}:%(progress._percent_str)s ${BMGT}ETA${BCYN}: %(progress._eta_str)s ${VBLU}Speed${BCYN}:%(progress._speed_str)s"
    "$URL"
)

# <â”€â”€ Best Audio â†’ MP3 â”€â”€> #
OPT_BMP3_CMD=(
  yt-dlp
    -x --audio-format mp3
    -f "bestaudio"
    -o "%(uploader)s - %(title)s.mp3"
    --quiet --progress
    --no-playlist
    --console-title
    --no-check-formats --no-warnings --ignore-errors
    --progress-template "download: DL:%(progress._percent_str)s ETA:%(progress._eta_str)s Speed:%(progress._speed_str)s"
    "$URL"
)

# <â”€â”€ Menu Options â”€â”€> #
OPTION_BMKV="${VBLU}Download${RESET} \
${BCYN}Video${RESET} \
${VBLU}In${RESET} \
${BCYN}Highest${RESET} \
${VBLU}Resolution${RESET}"

OPTION_2K_CAP="${VBLU}Download${RESET} \
${BCYN}Video${RESET} \
${VBLU}In${RESET} \
${BCYN}2K${RESET} \
${VBLU}Resolution${RESET}"

OPTION_B3="${VBLU}Download An${RESET} \
${BCYN}MP3${RESET} \
${VBLU}File${RESET}"

clear
DEFAULT="1"

# <â”€â”€ Nah-Fam_Studies â”€â”€> #
echo '
