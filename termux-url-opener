printf "   ${VBLU}├───────────────────────────────────────────────────────────┤\n"
printf "   ${VBLU}│ ${BMGT}[${BCYN}4${BMGT}] %s	${VBLU}│\n" "$OPTION_FULL"
printf "   ${VBLU}├───────────────────────────────────────────────────────────┤\n"
printf "   ${VBLU}│ ${BMGT}[${BCYN}5${BMGT}] %s	${VBLU}│\n" "$OPTION_B3"
printf "   ${VBLU}├───────────────────────────────────────────────────────────┤\n"
printf "   ${VBLU}│ ${BMGT}[${BCYN}E${BMGT}] ${BCYN}Press ${BWHT}[${NONG}Enter${BWHT}] ${BCYN}For ${BMGT}Default ${BCYN}}Option [%d] ${VBLU}│\n" "$DEFAULT"
printf "   ${VBLU}└───────────────────────────────────────────────────────────┘\n\n\n"

printf "   ${VBLU}┌──${BCYN}Press${VBLU}─${ACID}Any${VBLU}─${BCYN}Button${VBLU}─${BCYN}To${VBLU}─${BCYN}Move${VBLU}─${BCYN}On${VBLU}──┐\n"
printf "   ${VBLU}└──${BMGT}>${ACID}:"
read -r -t 100 DECISION
clear

DECISION=${DECISION:-$DEFAULT}
rc=2
case "${DECISION}" in
1)
echo '
